{
  "name": "mysql-mcp-server",
  "version": "0.1.3",
  "description": "An MCP server that provides read-only access to MySQL databases.",
  "type": "module",
  "bin": {
    "mysql-mcp-server": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "npm run build && node build/index.js",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "start:http": "npm run build && node build/index.js http",
    "test:setup": "node test-setup.js",
    "test:tools": "node test-tools.js",
    "test": "npm run test:setup && npm run test:tools"
  },
  "keywords": [
    "mcp",
    "mysql",
    "database",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dpflucas/mysql-mcp-server.git"
  },
  "author": "Diogo Lucas <dpflucas@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.13.2",
    "express": "^5.1.0",
    "mysql2": "^3.14.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.7",
    "dotenv": "^17.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}
